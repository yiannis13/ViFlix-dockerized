@model dynamic

@{
    ViewBag.Title = "New Rental";
}

<hr />
<h2>New Rental</h2>
<hr />

<form id="rentalform">
    <div class="form-group">
        <label>Customer Id</label>
        <input id="customerId" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label>Movie</label>
        <input id="movie" type="text" value="" class="form-control" />
    </div>

    <div class="row">
        <div class="col-md-4">
            <ul id="moviesUL" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>
<environment include="Staging,Production,Development">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="~/js/bootbox.min.js"></script>
    <script src="~/js/rental.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap-flatly.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/toastr.scss" />
</environment>
