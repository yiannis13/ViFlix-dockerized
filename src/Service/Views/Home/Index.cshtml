@{
    ViewBag.Title = "ViFlix";
}

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <environment include="Staging,Production,Development">
        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap-flatly.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/js/modernizr-2.6.2.js"></script>
    </environment>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ViFlix", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Login", "LoginForm", "Login", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Sign Up", "SignUpForm", "SignUp", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="jumbotron">
            <h1>ViFlix</h1>
            <p class="lead">WATCH ANYWHERE. CANCEL ANYTIME.</p>
        </div>
    </div>

</body>
</html>
