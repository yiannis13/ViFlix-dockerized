
@using Microsoft.AspNetCore.Mvc.Rendering
@model Common.Models.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "New Movie";
}

<hr />
<h2>New Movie</h2>
<hr />

@using (@Html.BeginForm("CreateMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name):
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleasedDate):
        @Html.TextBoxFor(m => m.Movie.ReleasedDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre):
        <select asp-for="Genre" asp-items="Html.GetEnumSelectList<Common.Models.Domain.Genre>()" class="form-control"></select>
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock):
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
<environment include="Staging,Production,Development">
    <script src="~/js/jquery.validate.js"></script>
</environment>
